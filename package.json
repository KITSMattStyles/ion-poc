{
  "name": "ion-poc",
  "version": "0.0.3",
  "description": "POC for styled component lib",
  "main": "lib",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "standard",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir lib",
    "watch": "babel --watch src --out-dir lib",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepublish": "npm run build"
  },
  "author": "mattstyles",
  "license": "MIT",
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.16",
    "@storybook/addon-links": "^3.2.16",
    "@storybook/react": "^3.2.16",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-styled-components": "^1.3.0",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babel-preset-urban": "^1.0.1",
    "history": "^4.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.2",
    "standard": "^11.0.0-beta.0",
    "tape": "^4.8.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "open-color": "^1.5.1",
    "prop-types": "^15.6.0",
    "shevyjs": "^1.1.0",
    "styled-components": "^2.2.3"
  }
}
